<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <display-name>Inventory Management System</display-name>

  <servlet>
    <servlet-name>HelloServlet</servlet-name>
    <servlet-class>com.nisum.HelloServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HelloServlet</servlet-name>
    <url-pattern>/home1</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AddInventoryServlet</servlet-name>
    <servlet-class>com.nisum.AddInventoryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddInventoryServlet</servlet-name>
    <url-pattern>/AddInventoryServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>GetInventoryServlet</servlet-name>
    <servlet-class>com.nisum.GetInventoryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetInventoryServlet</servlet-name>
    <url-pattern>/GetInventoryServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>InventoryActionServlet</servlet-name>
    <servlet-class>com.nisum.InventoryActionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>InventoryActionServlet</servlet-name>
    <url-pattern>/InventoryActionServlet</url-pattern>
  </servlet-mapping>

</web-app>
